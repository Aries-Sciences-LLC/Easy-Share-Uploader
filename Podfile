# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Easy Share Uploader' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Image Uploader pod 'AWSCore'
  pod 'Alamofire', '~> 4.8.1'
  pod 'ReachabilitySwift'
  pod 'SwiftyDropbox'
  pod 'BackendlessSwift'
  pod 'SwiftyJSON'

  pod 'Uploadcare/Core', :path => './UploadCareSDK/'

  pod 'FirebaseCore', :path => './FireBaseSDK/'
  pod 'FirebaseDatabase', :path => './FireBaseSDK/'
  pod 'FirebaseStorage', :path => './FireBaseSDK/'
  pod 'FirebaseAuth', :path => './FireBaseSDK/'

  pod 'anim'

end
